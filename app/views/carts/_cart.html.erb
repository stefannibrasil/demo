<h2>Your Cart</h2>

<table class="ui small red table">
  <%= render(cart.line_items) %>
  <tfoot>
    <tr>
      <th colspan="4">Total:</th>
      <td class="price"><%= number_to_currency(cart.total_price) %></td>
    </tr>
  </tfoot>
</table>
<div class="inline fields">
  <%= button_to 'Empty cart', cart, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "ui left floated button" %>
  <%= button_to 'Checkout', new_order_path, method: :get, class: "ui violet right floated button" %>
</div>