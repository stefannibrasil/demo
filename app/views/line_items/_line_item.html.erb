<tr>
  <td class="quantity"><%= line_item.quantity %></td>
  <td><%= line_item.product.title %></td>
  <td>
    <%= button_to line_item, method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </td>
  <td class="price">
    <%= number_to_currency(line_item.total_price) %>
  </td>
</tr>