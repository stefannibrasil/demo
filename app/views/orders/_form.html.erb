<%= form_with(model: order, local: true, class: 'ui form') do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if notice %>
    <div class="ui yellow message">
      <aside id="notice"><%= notice %></aside>
    </div>
  <% end %>
  <h4 class="ui dividing header">Shipping Information</h4>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :order_name, size: 20 %>
  </div>
  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address, id: :order_address, rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :order_email, size: 40 %>
  </div>
  <div id='pay-type-component'></div>
  <br>
  <%= form.submit 'Place Order', class: "ui violet button", tabindex: "0" %>
<% end %>
<br>