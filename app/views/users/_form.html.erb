<% if flash[:alert] %>
  <div class="ui error message">
    <i class="close icon"></i>
    <div class="header">
      There were some errors with your submission
    </div>
    <ul class="list">
      <li><%= flash[:alert] %></li>
    </ul>
  </div>
<% end %>

<%= form_with(model: user, local: true, class: "ui form") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Enter User details</h2>

  <div class="inline field focus">
    <%= form.label :username, 'Username:' %>
    <%= form.text_field :username, id: :user_username, size: 40 %>
  </div>

  <div class="inline field focus">
    <%= form.label :password, 'Password:' %>
    <%= form.password_field :password, id: :user_password, size: 40 %>
  </div>

  <div class="inline field focus">
    <%= form.label :password_confirmation, 'Confirm:' %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation, size: 40 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
